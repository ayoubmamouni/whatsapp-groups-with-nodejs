<div dir="rtl" id="register-form" class="form-container">
    <div class="all-content">
        <h2>تسجيل الحساب</h2>
        <form action="/register" method="post">
            <div class="form-control">
                <label for="fullname">اسمك الكامل</label>
                <input type="text" id="fullname" placeholder="Ex: Ayoub Mamouni" required maxlength="30">
            </div>
            <div class="form-control">
                <label for="email">البريد الاليكتروني</label>
                <input type="email" id="email" placeholder="Ex: name@example.com" required maxlength="50">
            </div>
            <div class="form-control">
                <label for="password">كلمة السر</label>
                <input type="password" id="password" required maxlength="25">
            </div>
            <div class="form-control">
                <label for="Confirm-password">تأكيد كلمة السر</label>
                <input type="password" id="Confirm-password" required maxlength="25">
            </div>
            <div class="form-control">
                <button type="submit">تسجيل الحساب</button>
            </div>
        </form>

        <div class="close-pop-up-form close-pop-up-form-register">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
                <path fill="#F44336" d="M21.5 4.5H26.501V43.5H21.5z" transform="rotate(45.001 24 24)" />
                <path fill="#F44336" d="M21.5 4.5H26.5V43.501H21.5z" transform="rotate(135.008 24 24)" /></svg>
            <b>اغلاق</b>
        </div>
    </div>
</div>